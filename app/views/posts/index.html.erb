<html>

<style type = "text/css">
  
  body {
    font-family: Monospace;
    background-color: skyblue;
    color: blue;
    font-size: 20px;
    text-align: center;
    margin: 0 auto;
  }

 table {
   text-align: center;
    margin: 0 auto;
    width: 100px;
 } 

 </style>


<body>
<h1><div style = "height: 70px;"><strong>Listing Posts</strong></div></h1>
 
<table>
 
  <% @posts.each do |post| %>
  <tr>
  
    <th>Title</th>
    <th>Content</th>
   
  </tr>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      </tr>

  <tr>
      <td><%= link_to 'Show', post_path(post) %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post_path(post), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New post (+)', new_post_path %>

</body>
</html>